<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4 mt-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active" style="color: aliceblue">
            Add New Note
          </li>
        </ol>
        <div class="col d-flex justify-content-between align-items-center">
          <h1 class="h3">Add Note</h1>
        </div>
      </nav>
    </div>
  </div>

  <form action="/dashboard/add-note" method="POST" class="position-relative">
    <div
      class="form-group mb-4 position-absolute"
      style="left: 1px; top: 1px; right: 1px"
    >
      <input
        type="text"
        class="form-control fw-bold border-0 fs-4"
        id="title"
        name="title"
        placeholder="Title"
        required
      />
    </div>

    <div class="form-group mb-4">
      <textarea
        class="form-control pt-5"
        name="body"
        id="body"
        placeholder="Take a note..."
        rows="12"
        required
      ></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">
        + Add The Note
      </button>
    </div>
  </form>
</div>
