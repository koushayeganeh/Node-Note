<div class="container-fluid container-fluid-custom pb-5 mb-5 mt-5">
  <div class="row mb4">
    <div class="col">
      <h1>Hey, <%= userName %></h1>
    </div>
    <div class="col text-end">
      <a href="/dashboard/add-note" class="btn btn-primary">+ Add New Note</a>
    </div>
  </div>

  <div class="row">
    <% if(notes.length > 0) { for(var i=0; i < notes.length; i++) { %>
    <div class="col-sm-3 mb-4">
      <div class="card border-primry" style="min-height: 210px">
        <a
          href="/dashboard/item/<%= notes[i]._id %>"
          class="card-body text-decoration-none"
        >
          <h5 class="card-title"><%= notes[i].title %></h5>
          <p class="card-text"><%= notes[i].body %></p>
        </a>
      </div>
    </div>
    <% }} else { %>
    <div class="row">
      <div class="col-3">
        <h2>There is no notes yet.</h2>
      </div>
      <div class="col mt-md-4">
        <h4>
          Let's Start with your friest note!<br />
          <a href="/dashbpard/add">Create One!</a>
        </h4>
      </div>
    </div>
    <% } %>
  </div>

  <% if(notes.length > 0) { %>
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center mt-5">
      <% if(currentPage == 1) { %>
      <li class="page-item">
        <a class="page-link disabled" href="#">First</a>
      </li>
      <% } else { %>
      <li class="page-item">
        <a class="page-link" href="/dashboard">First</a>
      </li>
      <% } %> <% var i = (Number(currentPage) > 5 ? Number(currentPage) - 4 : 1)
      %> <% if (i !== 1 ) { %>
      <li class="page-item"><a class="page-link disabled" href="#">...</a></li>
      <% } %> <% for (; i <= (Number(currentPage) + 4) && i <= totalPages; i++)
      { %> <% if(i == currentPage ) { %>
      <li class="page-item">
        <a
          class="page-link"
          style="background-color: var(--primary-color); color: white"
          href="#"
          ><%= i %></a
        >
      </li>
      <% } else { %>
      <li class="page-item">
        <a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a>
      </li>
      <% } %> <% if(i == Number(currentPage) + 4 && i < totalPages) { %>
      <li class="page-item"><a class="page-link" href="#">...</a></li>
      <% } %> <% } %> <% if (currentPage == totalPages) { %>
      <li class="page-item disabled"><a class="page-link">Last</a></li>
      <% } else { %>
      <li class="page-item">
        <a href="/dashboard/?page=<%= totalPages %>" class="page-link">Last</a>
      </li>
      <% } %>
    </ul>
  </nav>

  <% } %>
</div>
